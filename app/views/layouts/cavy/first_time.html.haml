!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %title= @title ? @title : "Cavy"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

    = stylesheet_link_tag    "cavy/application", media: "all"
    = javascript_include_tag "cavy/application"

    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        %button{"type" => "button", "data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", "class" => "navbar-toggle"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a{:href => "#", class: "navbar-brand"}= Cavy.title || "Cavy"
        %ul.nav.pull-right
          - if current_user
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = current_user.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'Sign Out', admin_destroy_session_path, method: :delete, id: 'log-out'
    .container-fluid
      .row-fluid
        = yield
      %hr/
      %footer
        Â© Ruby Rainbows
        = Time.now.year