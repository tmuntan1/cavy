<div class="top-bar">

  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <li class="menu-text">
        <%= Cavy.title || 'Cavy' %>
      </li>
      <li>
        <a href="<%= admin_dashboard_path %>" id="admin-overview">
          <i class="fa fa-tachometer" aria-hidden="true"></i>
          Dashboard
        </a>
      </li>
      <% if current_user and current_user.role == 'admin' %>
          <li>
            <a>
              <i class="fa fa-university" aria-hidden="true"></i>
              Admin
            </a>
            <ul class="menu vertical">
              <li>
                <a href="<%= cavy_item_sections_path %>" id="admin-item-sections">
                  <i class="fa fa-sitemap" aria-hidden="true"></i>
                  Item Sections
                </a>
              </li>
              <li>
                <a href="<%= item_groups_path %>" id="admin-item-groups">
                  <i class="fa fa-object-group" aria-hidden="true"></i>
                  Item Groups
                </a>
              </li>
              <% if current_user&.site_manager? %>
                  <li>
                    <a href="<%= cavy_admin_users_path %>" id="admin-users">
                      <i class="fa fa-users" aria-hidden="true"></i>
                      Users
                    </a>
                  </li>
              <% end %>
            </ul>
          </li>
      <% end %>
      <li>
        <a href="<%= admin_pages_path %>" id="admin-pages">
          <i class="fa fa-files-o" aria-hidden="true"></i>
          Pages
        </a>
      </li>
      <% Cavy::ItemSection.all.each do |section| %>
          <li>
            <%= link_to section.title, cavy_item_section_path(section.id) %>
          </li>
      <% end %>
    </ul>
  </div>

  <div class="top-bar-right">
    <ul class="dropdown menu" data-dropdown-menu>
      <% if current_user %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-user" aria-hidden="true"></i>
              <%= current_user.name %>
            </a>
            <ul class="menu vertical">
              <li>
                <a href="<%= admin_destroy_session_path %>" id="log-out">
                  <i class="fa fa-sign-out" aria-hidden="true"></i>
                  Sign Out
                </a>
              </li>
            </ul>
          </li>
      <% end %>
    </ul>
  </div>

</div>
