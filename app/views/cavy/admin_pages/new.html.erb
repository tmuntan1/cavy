<div class="page-header">
  <h1>New Page</h1>
  <div class="small button-group">
    <%= link_to('Back to Pages', admin_pages_path, class: 'button') %>
  </div>
</div>

<%= form_for(@page, url: admin_create_page_path, method: :post) do |f| %>
    <% if @page.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@page.errors.count, 'error') %>
            prohibited this page from being saved:
          </h2>
          <ul>
            <% @page.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>
      <div class="form-group">
        <%= f.label :title, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Page to Render', class: 'control-label' %>
        <%= f.text_field :render, class: 'form-control' %>
      </div>
      <%= f.submit('Submit', class: 'success button', id: 'submit_page') %>
    </fieldset>
<% end %>
