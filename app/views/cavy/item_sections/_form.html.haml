= form_for @item_section do |f|
  - if @item_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_section.errors.count, "error")} prohibited this item_section from being saved:"
      %ul
        - @item_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
